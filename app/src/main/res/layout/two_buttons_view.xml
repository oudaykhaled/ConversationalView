<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llOption1"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/margin_320dp"
        android:background="@drawable/shape_rectangle_blue_bordered_1"
        android:orientation="vertical"
        android:layout_weight=".5"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivOption1"
            android:layout_width="@dimen/dimen_32_dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Once-off"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOption2"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/margin_320dp"
        android:background="@drawable/shape_rectangle_blue_bordered_1"
        android:orientation="vertical"
        android:layout_weight=".5"
        android:layout_marginLeft="@dimen/margin_8dp"
        android:layout_marginRight="@dimen/margin_8dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivOption2"
            android:layout_width="@dimen/dimen_32_dp"
            android:layout_height="@dimen/dimen_32_dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Per Month"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:textSize="15sp"
            android:lineSpacingExtra="4sp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"
            />

    </LinearLayout>
</LinearLayout>
